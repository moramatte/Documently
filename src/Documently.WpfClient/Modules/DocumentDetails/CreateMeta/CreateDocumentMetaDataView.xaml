             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Shared="clr-namespace:Documently.WpfClient.Shared" mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
